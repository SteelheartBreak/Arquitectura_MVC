<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo blanco -->
            <corners android:radius="8dp" /> <!-- Radio para esquinas redondeadas -->
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:color="#468B97" android:width="2dp" /> <!-- Color y ancho del borde -->
            <corners android:radius="6dp" /> <!-- Radio para esquinas redondeadas (menos que el fondo) -->
        </shape>
    </item>
</layer-list>
